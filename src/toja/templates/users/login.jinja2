{% extends "../centred_narrow_layout.jinja2" %}
{% import "../macros/form.jinja2" as form with context %}

{% block title %}The Old Joke Archive - Login{% endblock title %}
{% block content %}
  <form action="{{ request.route_url('users.login') }}" method="post" novalidate>
    <h1>Login</h1>
    <div>{{ form.field('email', 'email', 'E-Mail Address', attributes={'required': 'required'}) }}</div>
    <div>{{ form.field('password', 'password', 'Password', attributes={'required': 'required'}) }}</div>
    <div class="text-right">
      {{ form.buttons('Login', "Don't Login", request.route_url('root')) }}
    </div>
  </form>
{% endblock content %}
