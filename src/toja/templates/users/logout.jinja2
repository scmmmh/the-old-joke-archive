{% extends 'toja:templates/layout/minimal.jinja2' %}

{% block title %}The Old Joke Archive | Log out{% endblock title %}

{% block main %}
{% from 'toja:templates/macros/forms.jinja2' import field with context %}
<h1 class="alt-font">Log out</h1>
<form action="{{ 'user.logout'|route_url() }}" method="post" class="margin-top">
  <div class="flex align-center margin-top">
    <div class="shrink">
      <a href="{{ 'root'|route_url() }}">&larr; Don't log out</a>
    </div>
    <div class="text-right">
      <button>Log out</button>
    </div>
  </div>
</form>
{% endblock main %}
